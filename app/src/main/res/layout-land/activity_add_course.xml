<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.CourseAddActivity"
    >


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="128dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="128dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:id="@+id/cardView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginEnd="24dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/cardview_dark_background"
                    android:orientation="vertical"
                    android:padding="8dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/courseName"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:layout_weight="1"
                            android:ellipsize="start"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="COURSE TITLE"
                            android:inputType="text"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <EditText
                            android:id="@+id/courseStartDate"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:background="@color/teal_700"
                            android:ellipsize="start"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="START DATE"
                            android:inputType="date"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF" />

                        <EditText
                            android:id="@+id/courseEndDate"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:background="@color/teal_700"
                            android:ellipsize="start"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="END DATE"
                            android:inputType="date"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <TextView
                            android:id="@+id/courseStatus"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="4dp"
                            android:layout_weight="1"
                            android:ellipsize="start"
                            android:ems="10"
                            android:gravity="center"
                            android:inputType="text"
                            android:text="COURSE STATUS"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF" />

                        <Spinner
                            android:id="@+id/statusSpinner"
                            android:layout_width="match_parent"
                            android:layout_height="24dp"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1"
                            android:background="@color/cardview_light_background"></Spinner>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="8dp">

                        <CheckBox
                            android:id="@+id/optionalNote"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_marginRight="4dp"
                            android:layout_weight="2"
                            android:checked="false"
                            android:ellipsize="start"
                            android:ems="10"
                            android:gravity="right|center_vertical"
                            android:inputType="text"
                            android:layoutDirection="rtl"
                            android:text="ADD NOTES"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF" />

                        <EditText
                            android:id="@+id/courseNotes"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:layout_marginLeft="4dp"
                            android:layout_weight="1.5"
                            android:background="@color/cardview_light_background"
                            android:ems="10"
                            android:gravity="center"
                            android:inputType="textMultiLine" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/instructorName"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:layout_weight="1"
                            android:ellipsize="start"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="INSTRUCTOR NAME"
                            android:inputType="textPersonName"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/instructorEmail"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:layout_weight="1"
                            android:ellipsize="start"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="INSTRUCTOR EMAIL"
                            android:inputType="textEmailAddress"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/instructorPhone"
                            android:layout_width="match_parent"
                            android:layout_height="40dp"
                            android:layout_centerInParent="true"
                            android:layout_weight="1"
                            android:ellipsize="start"
                            android:ems="10"
                            android:gravity="center"
                            android:hint="INSTRUCTOR PHONE NUMBER"
                            android:inputType="phone"
                            android:textColor="#FFFFFF"
                            android:textColorHint="#FFFFFF" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="24dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="24dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/cancel_course_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/teal_700"
                    android:text="CANCEL" />

                <Button
                    android:id="@+id/save_course_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:layout_weight="1"
                    android:backgroundTint="@color/teal_700"
                    android:onClick="saveCourse"
                    android:text="SAVE" />
            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>