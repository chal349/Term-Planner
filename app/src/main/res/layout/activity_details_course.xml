<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/black"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UI.CourseDetailsActivity"
    >

    <androidx.cardview.widget.CardView
        android:id="@+id/cardView3"
        android:layout_width="match_parent"
        android:layout_height="336dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="24dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/cardview_dark_background"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/courseDetailsName"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:ems="10"
                    android:layout_weight="1"
                    android:hint="COURSE TITLE"
                    android:textStyle="italic"
                    android:inputType="text"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:ellipsize="start"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <EditText
                    android:id="@+id/courseDetailsStartDate"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/teal_700"
                    android:ellipsize="start"
                    android:ems="10"
                    android:gravity="center"
                    android:hint="START DATE"
                    android:layout_marginRight="4dp"
                    android:layout_weight="1"
                    android:inputType="date"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF" />

                <EditText
                    android:id="@+id/courseDetailsEndDate"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/teal_700"
                    android:ellipsize="start"
                    android:layout_weight="1"
                    android:ems="10"
                    android:gravity="center"
                    android:layout_marginLeft="4dp"
                    android:hint="END DATE"
                    android:inputType="date"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <TextView
                    android:id="@+id/courseDetailsStatus"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:ems="10"
                    android:layout_weight="1"
                    android:text="COURSE STATUS"
                    android:inputType="text"
                    android:layout_marginRight="4dp"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:ellipsize="start"/>

                <Spinner
                    android:id="@+id/statusDetailsSpinner"
                    android:layout_width="match_parent"
                    android:layout_height="24dp"
                    android:layout_weight="1"
                    android:layout_marginLeft="4dp"
                    android:background="@color/cardview_light_background">
                </Spinner>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp">

                <CheckBox
                    android:id="@+id/optionalDetailsNoteCheckBox"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:layout_marginRight="4dp"
                    android:layout_weight="2"
                    android:checked="false"
                    android:ellipsize="start"
                    android:ems="10"
                    android:gravity="right|center_vertical"
                    android:inputType="text"
                    android:layoutDirection="rtl"
                    android:text="ADD NOTES"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF" />

                <EditText
                    android:id="@+id/courseDetailsNotes"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_weight="1.5"
                    android:layout_marginLeft="4dp"
                    android:textStyle="italic"
                    android:hint="Enter Notes..."
                    android:background="@color/cardview_light_background"
                    android:ems="10"
                    android:gravity="center"
                    android:inputType="textMultiLine" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="4dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_weight="4"
                    android:text="INSTRUCTOR:"
                    android:textStyle="italic"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:ellipsize="start"/>

                <EditText
                    android:id="@+id/instructorNameCourseDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_weight="1"
                    android:hint="Enter Name"
                    android:textStyle="italic"
                    android:inputType="textPersonName"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:ellipsize="start"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_weight="2"
                    android:text="Email:"
                    android:textStyle="italic"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:ellipsize="start"/>

                <EditText
                    android:id="@+id/instructorEmailCourseDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_weight="1"
                    android:hint="Email Address"
                    android:textStyle="italic"
                    android:inputType="textEmailAddress"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:ellipsize="start"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_weight="2"
                    android:text="Phone #:"
                    android:textStyle="italic"
                    android:textColor="#FFFFFF"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:ellipsize="start"/>


                <EditText
                    android:id="@+id/instructorPhoneCourseDetails"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_weight="1"
                    android:hint="Phone Number"
                    android:textStyle="italic"
                    android:inputType="phone"
                    android:textColor="#FFFFFF"
                    android:textColorHint="#FFFFFF"
                    android:gravity="center"
                    android:layout_centerInParent="true"
                    android:ellipsize="start"/>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="24dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView3">

        <Button
            android:id="@+id/delete_course_details_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/teal_700"
            android:onClick="DeleteCourse"
            android:text="DELETE" />

        <Button
            android:id="@+id/save_course_details_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_weight="1"
            android:backgroundTint="@color/teal_700"
            android:onClick="saveCourseDetails"
            android:text="SAVE" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/course_with_assessments_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:clipToPadding="false"
            tools:listitem="@layout/list_assessment" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout8"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="64dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="64dp"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout6">

        <Button
            android:id="@+id/addAssessment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="AddAssessment"
            android:text="ADD ASSESSMENT" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>