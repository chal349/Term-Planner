<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.termplanner">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.TermPlanner">
        <receiver
            android:name=".UI.Receiver"
            android:enabled="true"
            android:exported="true"></receiver>

        <activity
            android:name=".UI.CourseDetailsActivity"
            android:exported="false"
            android:parentActivityName=".UI.CourseActivity" />
        <activity
            android:name=".UI.CourseAddActivity"
            android:exported="false"
            android:parentActivityName=".UI.CourseActivity" />
        <activity
            android:name=".UI.AssessmentActivity"
            android:exported="false"
            android:parentActivityName=".UI.MainMenuActivity" />
        <activity
            android:name=".UI.AssessmentAddDetailsActivity"
            android:exported="false"
            android:parentActivityName=".UI.AssessmentActivity" />
        <activity
            android:name=".UI.CourseActivity"
            android:exported="false"
            android:parentActivityName=".UI.MainMenuActivity" />
        <activity
            android:name=".UI.TermAddActivity"
            android:exported="false"
            android:parentActivityName=".UI.TermActivity" />
        <activity
            android:name=".UI.TermActivity"
            android:exported="false"
            android:parentActivityName=".UI.MainMenuActivity" />
        <activity
            android:name=".UI.TermDetailsActivity"
            android:exported="false"
            android:parentActivityName=".UI.TermActivity" />
        <activity
            android:name=".UI.MainMenuActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>